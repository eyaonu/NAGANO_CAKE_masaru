<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
      <%= link_to "秘密のケーキ屋さん", root_path, class: "navbar-brand" %>

  <% if admin_signed_in? %>
  <%= render "admin/shared/header" %>
  <% elsif customer_signed_in? %>
  <%= render "public/shared/header" %>
  <% else %>
    <li class="nav-item">
      <%= link_to "About", about_path, class: "nav-link fas fa-sign-in-alt" %>
    </li>
    <li class="nav-item">
      <%= link_to "商品一覧", items_path, class: "nav-link fas fa-user-plus" %>
    </li>
    <li class="nav-item">
      <%= link_to "ログイン", new_customer_session_path, class: "nav-link fas fa-sign-in-alt" %>
    </li>
    <li class="nav-item">
      <%= link_to "新規登録", new_customer_registration_path, class: "nav-link fas fa-user-plus" %>
    </li>
  <% end %>
      </div>
    </nav>
  </header>

  <div class="body">
  <div class="container">
    <%= yield %>
  </div>
  </body>
</html>